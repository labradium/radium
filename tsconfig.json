{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["dist", "node_modules", "lib"],
  "include": ["src/**/*.ts", "scripts/**/*.ts"]
}
