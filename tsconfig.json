{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["dist", "node_modules", "lib"],
  "include": ["src/**/*.ts", "scripts/**/*.ts"]
}
