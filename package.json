{
  "name": "create-radium",
  "version": "0.3.1",
  "description": "Initialize a new project with radium.",
  "license": "MIT",
  "author": "Team Silver <contact@vgseven.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/silver-radium/create-radium.git",
    "directory": "create-radium"
  },
  "keywords": [
    "radium-init",
    "react",
    "nextjs",
    "tailwindcss",
    "radix-ui",
    "astro",
    "solidjs",
    "million"
  ],
  "module": "index.ts",
  "type": "module",
  "exports": "./dist/index.js",
  "bin": {
    "create-radium": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "package.json"
  ],
  "engines": {
    "bun": ">=1.1"
  },
  "scripts": {
    "lint": "tsc",
    "build": "bun build index.ts --outdir ./dist --target node --format esm",
    "optimize": "prettier --write \"**/*.{ts,json,mjs,cjs,js,md}\" && prettier --check \"**/*.{ts,json,mjs,cjs,js,md}\"",
    "build:prepare": "bun run optimize && bun run build",
    "release": "changeset publish --tag latest",
    "prepare": "husky"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "fs-extra": "^11.2.0",
    "picocolors": "^1.0.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.5",
    "@types/bun": "latest",
    "@types/fs-extra": "^11.0.4",
    "eslint": "^9.4.0",
    "husky": "^9.0.11",
    "prettier": "^3.3.2",
    "prettier-plugin-organize-imports": "^3.2.4",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
