{
  "name": "templates",
  "private": false,
  "type": "module",
  "license": "MIT",
  "description": "A collection of huge templates...",
  "author": "vgseven <contact@vgseven.com> (https://vgseven.com)",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "finetune": "prettier --write \"**/*.{ts,tsx,js,json,mjs,cjs,mdx,md}\" && prettier --check \"**/*.{ts,tsx,js,json,mjs,cjs,mdx,md}\"",
    "prepare": "husky",
    "build:prepare": "bun run finetune && bun run lint && bun run build",
    "dev:prepare": "git pull origin main && bun i"
  },
  "devDependencies": {
    "@types/bun": "^1.1.5",
    "husky": "^9.0.11",
    "prettier": "^3.3.2",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "turbo": "^2.0.4",
    "typescript": "^5.5.2"
  },
  "engines": {
    "bun": ">=1.1"
  },
  "packageManager": "bun@1.1.15",
  "workspaces": [
    "next/*",
    "react/*",
    "!monorepo/*"
  ]
}
