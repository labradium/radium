{
	"name": "templates",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"finetune": "biome format . --write && biome lint . --write",
		"prepare": "husky",
		"build:prepare": "bun run finetune && bun run lint && bun run build",
		"dev:prepare": "git pull origin main && bun i"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@manypkg/get-packages": "^2.2.2",
		"@types/bun": "^1.1.6",
		"husky": "^9.0.11",
		"turbo": "^2.0.6"
	},
	"engines": {
		"bun": ">=1.1"
	},
	"packageManager": "bun@1.1.18",
	"workspaces": ["next/*"]
}
