{
  "name": "init",
  "private": true,
  "version": "0.3.1",
  "scripts": {
    "dev": "turbo dev",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "lint": "turbo lint",
    "build": "turbo build && cd monorepo/turborepo-general && turbo build",
    "optimize": "prettier --write \"**/*.{ts,tsx,md,mdx,json,mjs,js}\" && prettier --check \"**/*.{ts,tsx,md,mdx,json,mjs,js}\"",
    "format": "prettier '**/*.{cjs,mjs,ts,tsx,md,json}' --ignore-path ../.gitignore --ignore-unknown --no-error-on-unmatched-pattern --write",
    "format:check": "prettier '**/*.{cjs,mjs,ts,tsx,md,json}' --ignore-path ../.gitignore --ignore-unknown --no-error-on-unmatched-pattern --check",
    "build:prepare": "bun run optimize && bun run lint && bun run build"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-turbo": "^2.0.3",
    "eslint-plugin-only-warn": "^1.1.0",
    "prettier": "^3.3.1",
    "turbo": "^2.0.3",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.6.1"
  },
  "packageManager": "bun@1.1.2",
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "packages/*",
    "!monorepo/",
    "next/*",
    "react/*"
  ]
}
