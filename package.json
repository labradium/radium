{
  "name": "radium-init",
  "private": false,
  "version": "0.0.4",
  "description": "Initialize any new project in seconds with your tools..",
  "license": "MIT",
  "author": "vgseven <contact@vgseven.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/silver-radium/init.git",
    "directory": "silver-radium/init"
  },
  "homepage": "https://github.com/silver-radium/init/blob/main/README.md",
  "keywords": ["radium", "react", "nextjs", "tailwindcss", "radix-ui", "astro", "solidjs", "million"],
  "module": "./src/index.ts",
  "type": "module",
  "exports": "./dist/index.js",
  "bin": {
    "radium-init": "./dist/index.js",
    "init": "./dist/index.js",
    "radium": "./dist/index.js"
  },
  "files": ["dist", "README.md", "package.json", "lib"],
  "engines": {
    "bun": ">=1.1"
  },
  "scripts": {
    "dev": "bun ./src/index.ts",
    "lint": "biome lint . --write",
    "build": "bun build ./src/index.ts --outdir ./dist --target node --format esm",
    "clean": "bun ./scripts/clean.ts",
    "format": "biome format . --write",
    "build:prepare": "bun ./scripts/build.ts && bun run format && bun run lint && bun run build",
    "release": "changeset publish --tag latest",
    "prepare": "husky",
    "dev:prepare": "git pull origin main && bun i"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "@octokit/core": "^6.1.2",
    "@octokit/plugin-paginate-rest": "^11.3.3",
    "@octokit/plugin-rest-endpoint-methods": "^13.2.4",
    "axios": "^1.7.2",
    "fs-extra": "^11.2.0",
    "octokit": "^4.0.2",
    "picocolors": "^1.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.7",
    "@types/bun": "^1.1.6",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.11",
    "husky": "^9.1.0",
    "typescript": "^5.5.3"
  }
}
