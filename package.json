{
  "name": "radium",
  "private": true,
  "version": "0.1.3",
  "scripts": {
    "dev": "turbo dev",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "lint": "turbo lint",
    "build": "turbo build",
    "format": "bunx @biomejs/biome format --write .",
    "build:prepare": "bun run format && bun run lint && bun run build"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.0",
    "turbo": "^2.0.1"
  },
  "packageManager": "bun@1.1.2",
  "engines": {
    "bun": ">=1"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "templates/**"
  ]
}
