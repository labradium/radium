{
  "name": "init",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "lint": "turbo lint",
    "build": "turbo build",
    "prepare": "husky",
    "optimize": "prettier --write \"**/*.{ts,tsx,md,mdx,json,mjs,js}\" && prettier --check \"**/*.{ts,tsx,md,mdx,json,mjs,js}\"",
    "build:prepare": "bun run optimize && bun run lint && bun run build",
    "release": "changeset version",
    "pub:next": "bun run build:prepare && changeset publish --tag next",
    "pub:release": "bun run build:prepare && changeset publish --tag latest"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.5",
    "@types/bun": "^1.1.3",
    "eslint": "^8.57.0",
    "eslint-config-turbo": "^2.0.3",
    "eslint-plugin-only-warn": "^1.1.0",
    "husky": "^9.0.11",
    "prettier": "^3.3.1",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.6.1",
    "turbo": "^2.0.3"
  },
  "packageManager": "bun@1.1.2",
  "engines": {
    "bun": ">=1.1"
  },
  "workspaces": [
    "packages/*",
    "templates/**"
  ]
}
