{
  "name": "radium",
  "private": true,
  "version": "0.1.1",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,mdx,json,mjs,js}\" && prettier --check \"**/*.{ts,tsx,md,mdx,json,mjs,js}\"",
    "prepare": "husky",
    "build:prepare": "pnpm run format && pnpm run lint && pnpm run build"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.5",
    "eslint": "^8.57.0",
    "eslint-config-turbo": "^1.13.3",
    "eslint-plugin-only-warn": "^1.1.0",
    "husky": "^9.0.11",
    "prettier": "^3.3.0",
    "turbo": "^1.13.3",
    "vitest": "^1.6.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.6.1"
  },
  "packageManager": "pnpm@9.1.4",
  "engines": {
    "node": ">=20"
  }
}
