{
  "name": "radium",
  "private": true,
  "version": "0.2.0",
  "scripts": {
    "dev": "turbo dev",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "lint": "turbo lint",
    "build": "turbo build",
    "optimize": "prettier --write \"**/*.{ts,tsx,md,mdx,json,mjs,js}\" && prettier --check \"**/*.{ts,tsx,md,mdx,json,mjs,js}\"",
    "build:prepare": "bun run optimize && bun run lint && bun run build"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "eslint": "^8.57.0",
    "prettier": "^3.3.1",
    "turbo": "^2.0.1",
    "prettier-plugin-tailwindcss": "^0.6.1"
  },
  "packageManager": "bun@1.1.2",
  "engines": {
    "bun": ">=1"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "templates/**",
    "templates/monorepo/**"
  ]
}
