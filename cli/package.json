{
  "name": "radium-cli",
  "private": false,
  "version": "0.1.2",
  "description": "Initialize any new project in seconds with your tools..",
  "license": "MIT",
  "author": "vgseven <contact@vgseven.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/silver-company/radium.git",
    "directory": "silver-company/radium"
  },
  "homepage": "https://github.com/silver-company/radium/blob/main/README.md",
  "keywords": [
    "radium",
    "react",
    "nextjs",
    "tailwindcss",
    "radix-ui",
    "astro",
    "solidjs",
    "million"
  ],
  "module": "./src/index.ts",
  "type": "module",
  "exports": "./dist/index.js",
  "bin": {
    "radium": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "package.json",
    "lib"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "pnpm run build && node ./dist/index.js",
    "lint": "biome lint . --write",
    "build": "rimraf dist && tsup",
    "clean": "pnpm rimraf node_modules && pnpm rimraf .turbo && pnpm rimraf dist",
    "format": "biome format . --write",
    "build:prepare": "pnpm run format && pnpm run lint && pnpm run build",
    "prepare": "husky",
    "dev:prepare": "git pull origin main && pnpm i"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "@octokit/core": "^6.1.2",
    "@octokit/plugin-paginate-rest": "^11.3.3",
    "@octokit/plugin-rest-endpoint-methods": "^13.2.4",
    "axios": "^1.7.2",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "octokit": "^4.0.2",
    "picocolors": "^1.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.12",
    "husky": "^9.1.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.2.3",
    "typescript": "^5.5.4",
    "zod": "^3.23.8"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  }
}