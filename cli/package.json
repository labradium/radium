{
  "name": "radium-init",
  "version": "0.0.1",
  "description": "Initialize a new project with radium.",
  "license": "MIT",
  "author": "Team Silver <contact@vgseven.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/silver-radium/init.git",
    "directory": "cli"
  },
  "keywords": [
    "radium-init",
    "react",
    "nextjs",
    "tailwindcss",
    "radix-ui",
    "astro",
    "solidjs",
    "million"
  ],
  "type": "module",
  "exports": "./dist/index.js",
  "bin": {
    "radium-init": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "package.json"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "lint": "tsc",
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist .turbo node_modules",
    "start": "node dist/index.js",
    "release": "changeset version",
    "pub:beta": "bun run build && npm publish --tag beta",
    "pub:next": "bun run build && npm publish --tag next",
    "pub:release": "bun run build && npm publish"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "picocolors": "^1.0.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.5",
    "@types/node": "^20.14.2",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5"
  }
}
