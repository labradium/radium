  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.7",
    "@types/node": "^20.14.10",
    "husky": "^9.0.11",
    "tsup": "^8.2.3",
    "typescript": "^5.5.3"
  }
}
